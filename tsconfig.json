{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "preserve",
        "moduleResolution": "node",
        "strict": true,
        "noEmit": true,
        "allowJs": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "baseUrl": "src",
        "paths": {
            "assets/*": ["assets/*"],
            "utils/*": ["utils/*"],
            "stores/*": ["stores/*"],
            "components/*": ["components/*"],
            "screens/*": ["screens/*"],
            "services/*": ["services/*"],
            "theme/*": ["theme/*"]
        }
    },
    "include": ["src"]
}
